<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.colafans.checkboxdemo.MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <CheckBox
                android:id="@+id/cb_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/movie_text" />

            <Button
                android:id="@+id/btn_movie_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check" />

            <Button
                android:id="@+id/btn_movie_uncheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uncheck" />

            <Button
                android:id="@+id/btn_movie_perform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perform" />
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/cb_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/music_text" />

            <Button
                android:id="@+id/btn_music_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check" />

            <Button
                android:id="@+id/btn_music_uncheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uncheck" />

            <Button
                android:id="@+id/btn_music_perform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perform" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_submit"
        android:hint="@string/hint" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:text="@string/submit" />
</RelativeLayout>
